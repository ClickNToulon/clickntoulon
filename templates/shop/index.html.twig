{% extends 'base.html.twig' %}

{% block title 'Les boutiques - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'shop'} %}
    {% if shops.items != null %}
        <section class="text-gray-600 body-font" id="discover">
            <div class="container px-8 sm:px-5 pt-12 mx-auto">
                <div class="flex items-center justify-center mb-12">
                    <h1 class="sm:text-5xl text-3xl font-extrabold title-font text-black dark:text-white mb-4 uppercase tracking-wider title-underline">
                        Les boutiques
                    </h1>
                </div>
                <div class="mt-6 grid grid-cols-1 gap-y-12 gap-x-6 sm:grid-cols-2 xl:gap-x-10">
                    {% include 'shop/shop_skeleton.html.twig' with {'shops': shops} %}
                </div>
                {{ knp_pagination_render(shops) }}
            </div>
        </section>
        {% include 'footer.html.twig' %}
    {% else %}
        <div class="container px-5 py-5 mx-auto absolute top-1/4 sm:top-1/3 left-0 right-0">
            <h1 class="text-black dark:text-white font-semibold text-4xl text-center">Aucune boutique sur ClickNToulon actuellement...</h1>
            <p class="text-black dark:text-gray-200 font-semibold text-xl italic text-center mt-1">Vous pouvez créer la vôtre dès maintenant</p>
            <p class="text-black dark:text-gray-200 font-semibold text-base italic text-center mt-1">Pour cela, rendez-vous sur votre profil</p>
        </div>
        <div class="absolute bottom-0 w-full">
            {% include 'footer.html.twig' %}
        </div>
    {% endif %}
{% endblock %}