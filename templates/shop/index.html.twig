{% extends 'base.html.twig' %}

{% block title 'Les boutiques - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'shop'} %}
    {% if shops.items != null %}
        <section class="text-gray-400 body-font realtive">
            <div class="container px-5 py-24 mx-auto">
                <div class="flex flex-wrap -m-4">
                    {% include 'shop/shop_skeleton.html.twig' with {'shops': shops} %}
                </div>
                {{ knp_pagination_render(shops) }}
            </div>
        </section>
        {% include 'footer.html.twig' %}
    {% else %}
        <div class="sm:container px-5 py-5 mx-auto absolute top-1/4 sm:top-1/3 left-0 right-0">
            <h1 class="text-black dark:text-white font-medium text-4xl text-center">Aucune boutique sur ClickNToulon actuellement...</h1>
            <p class="text-black dark:text-white font-medium text-xl italic text-center mt-1">Vous pouvez créer la vôtre dès maintenant</p>
            <p class="text-black dark:text-white font-medium text-base italic text-center mt-1">Pour cela, rendez-vous sur votre profil</p>
        </div>
        <div class="absolute bottom-0 w-full">
            {% include 'footer.html.twig' %}
        </div>
    {% endif %}
{% endblock %}