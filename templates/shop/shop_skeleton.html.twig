{% for shop in shops %}
<div class="p-2 md:p-4 md:w-1/2">
    <div class="h-full border-2 border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden dark:bg-gray-800 bg-white shadow-lg dark:shadow-none">
        <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ asset('uploads/shops/' ~ shop.cover) }}" alt="blog">
        <div class="p-6">
            <h2 class="text-md font-medium text-black dark:text-gray-300 leading-none mb-1 inline-flex items-center py-2 px-3 rounded-xl bg-gray-200 shadow dark:shadow-none dark:bg-gray-900">
                {% if shop.status == 2 %}
                    Boutique partenaire
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                {% elseif shop.status == 1 %}
                    Boutique vérifiée
                {% else %}
                    Boutique non vérifiée
                {% endif %}
            </h2>
            <h1 class="title-font text-lg font-medium text-black dark:text-white mb-3">{{ shop.name }}</h1>
            <p class="text-gray-600 dark:text-gray-400 mb-3">{{ shop.description | u.truncate(150, '...', false) }}</p>
            <div class="flex items-center flex-wrap ">
                <a class="text-yellow-500 dark:text-yellow-400 font-medium inline-flex items-center md:mb-2 lg:mb-0" href="{{ path('shop_show', {slug: shop.slug}) }}">
                    Voir la boutique
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 12h14"></path>
                        <path d="M12 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
{% endfor %}