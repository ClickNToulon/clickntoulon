{% for shop in shops %}
    <div class="w-full relative">
        {% if shop.status == 2 %}
        <span class="bg-yellow-500 rounded-full text-white font-semibold px-3 py-2 z-50 absolute -right-4 -top-4 flex items-center justify-center">
            Partenaire
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
        </span>
        {% endif %}
        <div class="h-full border-2 border-gray-200 rounded-xl overflow-hidden bg-white shadow-xl">
            <img class="h-72 w-full object-cover object-center" src="{{ asset('uploads/shops/' ~ shop.image) }}" alt="blog">
            <div class="p-6">
                <h1 class="title-font text-2xl font-semibold text-black mb-3">{{ shop.name }}</h1>
                <p class="text-black font-semibold mb-3">{{ shop.description | u.truncate(150, '...', false) }}</p>
                <div class="flex items-center flex-wrap">
                    <a class="text-yellow-500 font-semibold inline-flex items-center md:mb-2 lg:mb-0 text-lg" href="{{ path('shop_show', {slug: shop.slug}) }}">
                        Voir la boutique
                        <svg class="w-6 h-6 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14"></path>
                            <path d="M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}