{% for product in products %}
    <div class="p-2 md:p-4 md:w-1/4">
        <div class="h-full border-2 border-gray-300 dark:border-gray-800 rounded-lg overflow-hidden bg-white dark:bg-gray-800 shadow-lg dark:shadow-none">
            <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ asset('uploads/products/' ~ product.image) }}" alt="blog">
            <div class="p-6">
                <div class="prices inline-flex">
                    <h2 class="text-md text-gray-900 dark:text-gray-300 leading-none mb-1 font-medium {% if product.dealprice is not null %}line-through{% endif %}">{{ product.price | format_currency('EUR') }}</h2>
                    {% if product.dealprice is not null %}
                        <h2 class="text-md font-medium text-red-500 leading-none mb-1 ml-2 font-bold">{{ product.dealprice | format_currency('EUR') }}</h2>
                    {% endif %}
                </div>
                <h1 class="title-font text-lg font-medium text-black dark:text-white mb-3">{{ product.name }}</h1>
                <p class="text-gray-600 dark:text-gray-400 mb-3">{{ product.description | u.truncate(150, '...', false) }}</p>
                <div class="flex items-center flex-wrap ">
                    <a class="text-yellow-500 dark:text-yellow-400 font-medium inline-flex items-center md:mb-2 lg:mb-0" href="{{ path('product_show', {id: product.id}) }}">
                        Voir le produit
                        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14"></path>
                            <path d="M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}