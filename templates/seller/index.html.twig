{% extends 'base.html.twig' %}

{% block title 'Ma boutique - TouSolidaires' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}
    {% include 'seller/_header.html.twig' %}
    <main class="pb-4-5 pb-md-11 mt-md-n6">
        <div class="container-md">
            <div class="row">
                <div class="col-12 col-md-3">
                    {% include 'seller/_tabs.html.twig' with {active: 'orders'} %}
                </div>
                <div class="col-12 col-md-9">
                    <div class="card card-bleed shadow-light-lg mb-5 seller-orders">
                        {% if orders != false %}
                            <div class="fr-table fr-table--bordered">
                                <table class="table table-light table-striped">
                                    <thead>
                                    <tr>
                                        <th>N°</th>
                                        <th>Nom client</th>
                                        <th>ID Produits</th>
                                        <th>Quantités</th>
                                        <th>Statut</th>
                                        <th class="last-th">Actions</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 0 %}
                                    {% for order in orders %}
                                        <tr>
                                            <td>{{ order.id }}</td>
                                            <td>{{ orders_buyers[order.id].fullName }}</td>
                                            <td>{{ products_id[order.id] }}</td>
                                            <td>{{ quantities[order.id] }}</td>
                                            <td>{{ order.status }}</td>
                                            <td class="last-td">
                                                {% if order.status == 0 %}
                                                    <button class="btn btn-form mg-t-0" data-fr-opened="false" aria-controls="order-confirm">Confirmer la commande</button>
                                                    <dialog aria-labelledby="order-confirm-title" id="order-confirm" class="fr-modal align-items-center justify-content-center" role="dialog">
                                                        <div class="fr-container--fluid fr-container-md dialog-w-100">
                                                            <div class="fr-grid-row fr-grid-row--center">
                                                                <div class="fr-col-12 fr-col-md-6 dark-bg">
                                                                    <div class="fr-modal__body">
                                                                        <div class="fr-modal__header">
                                                                            <button class="fr-link--close fr-link" aria-controls="order-confirm">Fermer</button>
                                                                        </div>
                                                                        <div class="fr-modal__content forms">
                                                                            <h1 id="order-confirm-title" class="fr-modal__title mb-2">
                                                                                <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                                                                Confirmer la commande n°{{ order.id }}
                                                                            </h1>
                                                                            <form action="{{ path('seller_orders_confirm', {id: shop.id, order: order.id}) }}" method="POST" name="order_confirm">
                                                                                <input type="hidden" name="_token" value="{{ csrf_token('order_confirm') }}">
                                                                                <input type="hidden" name="order_confirm[id]" id="order_confirm_id" value="{{ order.id }}" required>
                                                                                <label for="order_confirm_day">Date de retrait de la commande</label>
                                                                                {% set order_date = order.day|date("Y-m-d", "Europe/Paris") %}
                                                                                <input type="date" name="order_confirm[day]" id="order_confirm_day" class="fr-input form-control" value="{{ order_date }}" required>
                                                                                <label for="order_confirm_begin">Début</label>
                                                                                <input type="time" name="order_confirm[begin]" id="order_confirm_begin" class="fr-input form-control" required>
                                                                                <label for="order_confirm_end">Fin</label>
                                                                                <input type="time" name="order_confirm[end]" id="order_confirm_end" class="fr-input form-control" required>
                                                                                <label for="order_confirm_message">Votre message (optionel)</label>
                                                                                <textarea name="order_confirm[message]" id="order_confirm_message" class="fr-input form-control" rows="3"></textarea>
                                                                                <div class="fr-modal__footer order-confirm">
                                                                                    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                                                                        <li>
                                                                                            <button type="button" class="fr-btn btn-danger" aria-controls="order-confirm">
                                                                                                Revenir en arrière
                                                                                            </button>
                                                                                        </li>
                                                                                        <li>
                                                                                            <button type="submit" class="btn btn-form">
                                                                                                Confirmer la commande
                                                                                            </button>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </dialog>
                                                {% elseif order.status == 1 %}
                                                    <button class="btn btn-form mg-t-0" data-fr-opened="false" aria-controls="order-prepared">Commande en cours de preparation</button>
                                                    <dialog aria-labelledby="order-prepared-title" id="order-prepared" class="fr-modal align-items-center justify-content-center" role="dialog">
                                                        <div class="fr-container--fluid fr-container-md dialog-w-100">
                                                            <div class="fr-grid-row fr-grid-row--center">
                                                                <div class="fr-col-12 fr-col-md-6 dark-bg">
                                                                    <div class="fr-modal__body">
                                                                        <div class="fr-modal__header">
                                                                            <button class="fr-link--close fr-link" aria-controls="order-prepared">Fermer</button>
                                                                        </div>
                                                                        <div class="fr-modal__content forms">
                                                                            <h1 id="order-prepared-title" class="fr-modal__title mb-2">
                                                                                <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                                                                Confirmer que la commande n°{{ order.id }} est en cours de préparation
                                                                            </h1>
                                                                            <form action="{{ path('seller_orders_prepared', {id: shop.id, order: order.id}) }}" method="POST" name="order_prepared">
                                                                                <input type="hidden" name="_token" value="{{ csrf_token('order_prepared') }}">
                                                                                <input type="hidden" name="order_prepared[id]" id="order_prepared_id" value="{{ order.id }}" required>
                                                                                <p class="mt-3 text-white mb-0">Vous allez confirmer que le commande n°{{ order.id }} est en cours de préparation.</p>
                                                                                <div class="fr-modal__footer">
                                                                                    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                                                                        <li>
                                                                                            <button type="button" class="fr-btn btn-danger" aria-controls="order-ready">
                                                                                                Revenir en arrière
                                                                                            </button>
                                                                                        </li>
                                                                                        <li>
                                                                                            <button type="submit" class="fr-btn btn-form">
                                                                                                Confirmer
                                                                                            </button>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </dialog>
                                                {% elseif order.status == 2 %}
                                                    <button class="btn btn-form mg-t-0" data-fr-opened="false" aria-controls="order-ready">Commande prête</button>
                                                    <dialog aria-labelledby="order-ready-title" id="order-ready" class="fr-modal align-items-center justify-content-center" role="dialog">
                                                        <div class="fr-container--fluid fr-container-md dialog-w-100">
                                                            <div class="fr-grid-row fr-grid-row--center">
                                                                <div class="fr-col-12 fr-col-md-6 dark-bg">
                                                                    <div class="fr-modal__body">
                                                                        <div class="fr-modal__header">
                                                                            <button class="fr-link--close fr-link" aria-controls="order-ready">Fermer</button>
                                                                        </div>
                                                                        <div class="fr-modal__content forms">
                                                                            <h1 id="order-ready-title" class="fr-modal__title mb-2">
                                                                                <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                                                                Confirmer que la commande n°{{ order.id }} est prête
                                                                            </h1>
                                                                            <form action="{{ path('seller_orders_ready', {id: shop.id, order: order.id}) }}" method="POST" name="order_ready">
                                                                                <input type="hidden" name="_token" value="{{ csrf_token('order_ready') }}">
                                                                                <input type="hidden" name="order_ready[id]" id="order_ready_id" value="{{ order.id }}" required>
                                                                                {% set order_date = order.day|date("Y-m-d", "Europe/Paris") %}
                                                                                {% set order_begin = order.timeBegin | format_time('short', 'HH:mm', locale='fr') %}
                                                                                {% set order_end = order.timeEnd | format_time('short', 'HH:mm', locale='fr') %}
                                                                                <input type="hidden" name="order_ready[day]" id="order_ready_day" value="{{ order_date }}">
                                                                                <input type="hidden" name="order_ready[begin]" id="order_ready_begin" value="{{ order_begin }}">
                                                                                <input type="hidden" name="order_ready[end]" id="order_ready_end" value="{{ order_end }}">
                                                                                <p class="mt-3 text-white mb-0">Vous allez confirmer que la commande n°{{ order.id }} est prête.</p>
                                                                                <div class="fr-modal__footer">
                                                                                    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                                                                        <li>
                                                                                            <button type="button" class="btn btn-danger" aria-controls="order-ready">
                                                                                                Revenir en arrière
                                                                                            </button>
                                                                                        </li>
                                                                                        <li>
                                                                                            <button type="submit" class="btn btn-form">
                                                                                                Confirmer
                                                                                            </button>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </dialog>
                                                {% elseif order.status == 3 %}
                                                    <button class="btn btn-form mg-t-0" data-fr-opened="false" aria-controls="order-pickup">Commande récupérée</button>
                                                    <dialog aria-labelledby="order-pickup-title" id="order-pickup" class="fr-modal align-items-center justify-content-center" role="dialog">
                                                        <div class="fr-container--fluid fr-container-md dialog-w-100">
                                                            <div class="fr-grid-row fr-grid-row--center">
                                                                <div class="fr-col-12 fr-col-md-6 dark-bg">
                                                                    <div class="fr-modal__body">
                                                                        <div class="fr-modal__header">
                                                                            <button class="fr-link--close fr-link" aria-controls="order-pickup">Fermer</button>
                                                                        </div>
                                                                        <div class="fr-modal__content forms">
                                                                            <h1 id="order-pickup-title" class="fr-modal__title mb-2">
                                                                                <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                                                                Confirmer que la commande n°{{ order.id }} a été récupérée
                                                                            </h1>
                                                                            <form action="{{ path('seller_orders_pickup', {id: shop.id, order: order.id}) }}" method="POST" name="order_pickup">
                                                                                <input type="hidden" name="_token" value="{{ csrf_token('order_pickup') }}">
                                                                                <input type="hidden" name="order_pickup[id]" id="order_pickup_id" value="{{ order.id }}" required>
                                                                                <p class="mt-3 text-white mb-0">Vous allez confirmer que la commande n°{{ order.id }} a été récupérée.</p>
                                                                                <div class="fr-modal__footer">
                                                                                    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                                                                        <li>
                                                                                            <button type="button" class="btn btn-danger" aria-controls="order-pickup">
                                                                                                Revenir en arrière
                                                                                            </button>
                                                                                        </li>
                                                                                        <li>
                                                                                            <button type="submit" class="btn btn-form">
                                                                                                Confirmer
                                                                                            </button>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </dialog>
                                                {% endif %}
                                            </td>
                                            <td class="last-td">
                                                <button class="btn btn-form btn-danger mg-t-0" data-fr-opened="false" aria-controls="order-cancel">Annuler la commande</button></td>
                                            <dialog aria-labelledby="order-cancel-title" id="order-cancel" class="fr-modal align-items-center justify-content-center" role="dialog">
                                                <div class="fr-container--fluid fr-container-md dialog-w-100">
                                                    <div class="fr-grid-row fr-grid-row--center">
                                                        <div class="fr-col-12 fr-col-md-6 dark-bg">
                                                            <div class="fr-modal__body">
                                                                <div class="fr-modal__header">
                                                                    <button class="fr-link--close fr-link" aria-controls="order-cancel">Fermer</button>
                                                                </div>
                                                                <div class="fr-modal__content forms">
                                                                    <h1 id="order-cancel-title" class="fr-modal__title mb-2">
                                                                        <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                                                        Annulation de la commande n°{{ order.id }}
                                                                    </h1>
                                                                    <form action="{{ path('seller_orders_cancel', {id: shop.id, order: order.id}) }}" method="POST" name="order_cancel">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('order_cancel') }}">
                                                                        <input type="hidden" name="order_cancel[id]" id="order_cancel_id" value="{{ order.id }}" required>
                                                                        <label for="order_cancel_message">Votre message (optionel)</label>
                                                                        <textarea name="order_cancel[message]" id="order_cancel_message" class="fr-input form-control" rows="3"></textarea>
                                                                        <p class="mt-3 text-white mb-0">Vous allez confirmer que vous voulez annuler la commande n°{{ order.id }}.</p>
                                                                        <div class="fr-modal__footer order-confirm w-100">
                                                                            <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                                                                <li>
                                                                                    <button type="button" class="btn btn-danger" aria-controls="order-cancel">
                                                                                        Revenir en arrière
                                                                                    </button>
                                                                                </li>
                                                                                <li>
                                                                                    <button type="submit" class="btn btn-form">
                                                                                        Confirmer
                                                                                    </button>
                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </dialog>
                                            {% set i = i + 1 %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td class="text-bold">Total :  {{ total_orders }}</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        {% else %}
                            <h3 class="text-black">Vous n'avez pas de commandes en cours.</h3>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
    {% include 'footer.html.twig' %}
{% endblock %}