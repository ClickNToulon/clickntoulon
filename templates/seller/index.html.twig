{% extends 'base.html.twig' %}

{% block title 'Ma boutique - TouSolidaires' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}
    {% include 'seller/_header.html.twig' %}
    <section class="text-gray-400 body-font">
        <div class="container px-5 py-6 mx-auto">
            <div class="flex justify-center flex-wrap -m-4">
                {% include 'seller/_tabs.html.twig' with {active: 'orders'} %}
            </div>
        </div>
        <div class="flex flex-col">
            <div class="overflow-x-auto">
                <div class="py-2 align-middle inline-block min-w-full sm:px-2 lg:px-6">
                    {% if orders != false %}
                    <div class="shadow overflow-hidden border-b border-gray-200 dark:border-gray-700 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-500 table-striped">
                            <thead class="bg-gray-50 dark:bg-gray-800">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider">
                                        N°
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider">
                                        Nom client
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider">
                                        ID Produits
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider">
                                        Quantités
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider">
                                        Status
                                    </th>
                                    <th scope="col" class="relative px-2 py-3">
                                        <span class="sr-only">Actions</span>
                                        <span class="sr-only">Annuler la commande</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-500">
                            {% for order in orders %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-black dark:text-white">
                                        {{ order.id }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <img class="h-10 w-10 rounded-full bg-gray-500 dark:bg-gray-700" src="{{ asset('uploads/users/' ~ orders_buyers[order.id].avatar) }}" alt="">
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-black dark:text-white">
                                                    {{ orders_buyers[order.id].fullName }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-black dark:text-white">
                                        {{ products_id[order.id] }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-black dark:text-white">
                                        {{ quantities[order.id] }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-black dark:text-white">
                                        {% if order.status == 0 %}
                                            <span class="px-2 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-400 text-black">
                                                En attente de validation
                                            </span>
                                        {% elseif order.status == 1 %}
                                            <span class="px-2 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-500 text-black">
                                                Commande validée
                                            </span>
                                        {% elseif order.status == 2 %}
                                            <span class="px-2 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-500 text-black">
                                                En cours de préparation
                                            </span>
                                        {% elseif order.status == 3 %}
                                            <span class="px-2 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-700 text-white">
                                                Commande prête
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="pr-6 py-4 text-right text-sm font-medium">
                                        {% if order.status == 0 %}
                                            <a class="cursor-pointer text-black px-3 py-2 bg-yellow-400 rounded-lg mr-2" onclick="openModal('confirmModal{{ order.id }}')">Valider la commande</a>
                                            <div class="hidden z-10 inset-0 overflow-y-auto " aria-labelledby="modal-title" id="confirmModal{{ order.id }}" role="dialog" aria-modal="true">
                                                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                                                    <!-- Background overlay, show/hide based on modal state. -->
                                                    <div class="fixed inset-0 bg-gray-500 dark:bg-gray-900 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                                                    <!-- This element is to trick the browser into centering the modal contents. -->
                                                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                                                    <!-- Modal panel, show/hide based on modal state. -->
                                                    <div class="inline-block align-bottom bg-white dark:bg-gray-700 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                                                        <form action="{{ path('seller_orders_confirm', {id: shop.id, order: order.id}) }}" method="POST" name="order_confirm">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('order_confirm') }}">
                                                            <input type="hidden" name="order_confirm[id]" id="order_confirm_id" value="{{ order.id }}" required>
