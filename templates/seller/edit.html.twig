{% extends 'base.html.twig' %}

{% block title 'Modifier les informations de ma boutique - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {active: 'my-shop'} %}
    {% include 'seller/_header.html.twig' %}
    <section class="text-gray-400 body-font">
        <div class="container px-5 py-6 mx-auto">
            <div class="flex justify-center flex-wrap -m-4 mb-4">
                {% include 'seller/_tabs.html.twig' with {active: 'edit'} %}
            </div>
        </div>
        <div class="container px-5 mx-auto sm:max-w-7xl max-w-full">
            <div class="w-full">
                <div class="block md:grid md:grid-cols-3 md:gap-6">
                    <div class="md:col-span-1">
                        <div class="px-4 sm:px-0">
                            <h3 class="text-2xl font-bold uppercase tracking-wider text-white inline-flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="ml-1">Votre boutique</span>
                            </h3>
                            <p class="mt-1 text-base font-medium text-white">
                                Tous les champs doivent être remplis, sauf pour l'adresse mail qui est facultatif
                            </p>
                        </div>
                    </div>
                    <div class="mt-5 md:mt-0 md:col-span-2">
                        {{ form_start(form_update) }}
                        <div class="sm:overflow-hidden">
                            <div class="px-4 py-5 bg-darkblue-800 space-y-2 tablet:space-y-6 sm:p-6 rounded-xl">
                                <div class="grid grid-cols-2 gap-y-1 tablet:gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.name) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.name) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.tag) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.tag) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-y-1 tablet:gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.email) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.email) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.phone) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.phone) }}
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    {{ form_label(form_update.description) }}
                                    <div class="mt-1">
                                        {{ form_widget(form_update.description) }}
                                    </div>
                                </div>
                                <div>
                                    {{ form_label(form_update.address) }}
                                    <div class="mt-1">
                                        {{ form_widget(form_update.address) }}
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-y-1 tablet:gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.postalCode) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.postalCode) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form_update.city) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form_update.city) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="grid grid-cols-5 gap-1">
                                    {% for payment in payments %}
                                    <div class="col-span-2 lg:col-span-1">
                                        <div class="inline-flex items-start">
                                            <div class="mt-2">
                                                <div>
                                                    <label class="inline-flex items-center align-middle">
                                                        <input type="checkbox" class="rounded border-2 border-blue-600 text-blue-500 shadow-sm focus:border-blue-500" name="payment[]" value="{{ payment.id }}" id="payment_{{ payment.id }}" {% if payment in shop.payments %}checked{% endif %}>
                                                        <span class="text-white font-bold">{{ payment.name }}</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                <div class="px-4 py-3 sm:px-6 text-center">
                                    <button type="submit" class="inline-flex justify-center py-1 px-3 border border-transparent font-bold rounded-full text-white bg-blue-700 hover:bg-blue-600">
                                        Sauvegarder les changements
                                    </button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form_update) }}
                    </div>
                </div>
            </div>
            <div class="block" aria-hidden="true">
                <div class="py-5">
                    <div class="border-t border-blue-900"></div>
                </div>
            </div>
            <div class="mt-0">
