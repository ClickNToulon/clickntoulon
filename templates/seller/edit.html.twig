                                            <label class="block text-lg font-bold text-white">
                                                Samedi
                                            </label>
                                        </div>
                                        {% set f = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 6 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="samediTimeOpen{{ f }}" class="text-white">Ouverture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="samediTimeOpen{{ f }}" {% if openingHour.start %}value="{{ openingHour.start | format_time(locale='fr')}}"{% endif%} id="samediTimeOpen{{ f }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
