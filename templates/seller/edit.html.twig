                                        <a class="tab w-full sm:w-auto cursor-pointer" id="samediTab" onclick="changeTab('samedi', 'samediTab')">Samedi</a>
                                        <a class="tab w-full sm:w-auto cursor-pointer" id="dimancheTab" onclick="changeTab('dimanche', 'dimancheTab')">Dimanche</a>
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 gap-y-2 block" id="lundi">
                                        <div class="col-span-2 flex flex-row items-center justify-center">
                                            <label class="block text-lg font-bold text-white">
                                                Lundi
                                            </label>
                                        </div>
                                        {% set a = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 1 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="lundiTimeOpen{{ a }}" class="text-white">Ouverture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="lundiTimeOpen{{ a }}" {% if openingHour.start %}value="{{ openingHour.start |format_time(locale='fr') }}"{% endif%} id="lundiTimeOpen{{ a }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="lundiTimeClose{{ a }}" class="text-white">Fermeture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="lundiTimeClose{{ a }}" {% if openingHour.end %}value="{{ openingHour.end |format_time(locale='fr') }}"{% endif%} id="lundiTimeClose{{ a }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                            {% endif %}
                                            {% set a = a + 1 %}
                                        {% endfor %}
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 gap-y-1 hidden" id="mardi">
                                        <div class="col-span-2 flex flex-row items-center justify-center">
                                            <label class="block text-lg font-bold text-white">
                                                Mardi
                                            </label>
                                        </div>
                                        {% set b = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 2 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="mardiTimeOpen{{ b }}" class="text-white">Ouverture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="mardiTimeOpen{{ b }}" {% if openingHour.start %}value="{{ openingHour.start | format_time(locale='fr')}}"{% endif%} id="mardiTimeOpen{{ b }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
