                                                        <input type="time" name="mardiTimeClose{{ b }}" {% if openingHour.end %}value="{{ openingHour.end | format_time(locale='fr')}}"{% endif%} id="mardiTimeClose{{ b }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                            {% endif %}
                                            {% set b = b + 1 %}
                                        {% endfor %}
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 gap-y-1 hidden" id="mercredi">
                                        <div class="col-span-2 flex flex-row items-center justify-center">
                                            <label class="block text-lg font-bold text-white">
                                                Mercredi
                                            </label>
                                        </div>
                                        {% set c = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 3 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="mercrediTimeOpen{{ c }}" class="text-white">Ouverture</label>
