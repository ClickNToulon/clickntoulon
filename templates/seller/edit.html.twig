    <script>
        function openModal(modalID) {
            document.getElementById(modalID).classList.toggle('hidden');
            document.getElementById(modalID).classList.toggle('fixed');
        }

        function addHoraire(divID, buttonID) {
            document.getElementById(buttonID).classList.add('hidden');
            let div = document.createElement('div');
            div.classList = 'col-span-2 sm:col-span-1';
            div.id = `test-${divID}`;
            div.innerHTML = `
                <label>Ouverture</label>
                <div class="flex rounded-md shadow-sm">
                    <input type="time" name="test-${divID}3" class="w-full bg-white rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
            `;
            document.getElementById(divID).appendChild(div);
            let div2 = document.createElement('div');
            div2.classList = 'col-span-2 sm:col-span-1';
            div2.innerHTML = `
                <label>Fermeture</label>
                <div class="flex rounded-md shadow-sm">
                    <input type="time" name="test-${divID}4" class="w-full bg-white rounded-lg border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
            `;
            document.getElementById(divID).appendChild(div2);
            let del = document.createElement('div');
            del.classList = 'col-span-2 flex flex-row items-center justify-center';
            del.id = divID + '-delete';
            del.innerHTML =`<button type="button" onclick="suppHoraire('${divID}','${buttonID}')" class="px-3 py-2 dark:text-white text-black bg-yellow-600 mt-1 rounded-lg">Supprimer des horaires</button>`;
            document.getElementById(divID).appendChild(del);
        }

        function suppHoraire(divID, buttonID) {
            document.getElementById(divID).lastChild.remove();
            document.getElementById(divID).lastChild.remove();
            document.getElementById(divID).lastChild.remove();

            document.getElementById(buttonID).classList.remove('hidden');
        }
    </script>
