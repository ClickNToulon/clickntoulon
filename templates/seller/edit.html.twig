                                                        <input type="time" name="mercrediTimeOpen{{ c }}" {% if openingHour.start %}value="{{ openingHour.start | format_time(locale='fr')}}"{% endif%} id="mercrediTimeOpen{{ c }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="mercrediTimeClose{{ c }}" class="text-white">Fermeture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="mercrediTimeClose{{ c }}" {% if openingHour.end %}value="{{ openingHour.end | format_time(locale='fr')}}"{% endif%} id="mercrediTimeClose{{ c }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                            {% endif %}
                                            {% set c = c + 1 %}
                                        {% endfor %}
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 gap-y-1 hidden" id="jeudi">
                                        <div class="col-span-2 flex flex-row items-center justify-center">
                                            <label class="block text-lg font-bold text-white">
                                                Jeudi
                                            </label>
                                        </div>
                                        {% set d = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 4 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="jeudiTimeOpen{{ d }}" class="text-white">Ouverture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="jeudiTimeOpen{{ d }}" {% if openingHour.start %}value="{{ openingHour.start | format_time(locale='fr')}}"{% endif%} id="jeudiTimeOpen{{ d }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="jeudiTimeClose{{ d }}" class="text-white">Fermeture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="jeudiTimeClose{{ d }}" {% if openingHour.end %}value="{{ openingHour.end | format_time(locale='fr')}}"{% endif%} id="jeudiTimeClose{{ d }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                            {% endif %}
                                            {% set d = d + 1 %}
                                        {% endfor %}
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 gap-y-1 hidden" id="vendredi">
                                        <div class="col-span-2 flex flex-row items-center justify-center">
                                            <label class="block text-lg font-bold text-white">
                                                Vendredi
                                            </label>
                                        </div>
                                        {% set e = 1 %}
                                        {% for openingHour in openingHours %}
                                            {% if openingHour.day == 5 %}
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="vendrediTimeOpen{{ e }}" class="text-white">Ouverture</label>
                                                    <div class="flex rounded-md shadow-sm">
                                                        <input type="time" name="vendrediTimeOpen{{ e }}" {% if openingHour.start %}value="{{ openingHour.start | format_time(locale='fr')}}"{% endif%} id="vendrediTimeOpen{{ e }}" class="w-full bg-white dark:bg-darkblue-700 rounded-xl border-2 border-blue-800 focus:border-blue-500 text-gray-700 dark:text-gray-100 py-2 px-3 mt-1 mb-4 placeholder:text-gray-400">
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="vendrediTimeClose{{ e }}" class="text-white">Fermeture</label>
                                                    <div class="flex rounded-md shadow-sm">
