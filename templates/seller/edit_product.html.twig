{% extends 'base.html.twig' %}

{% block title '&Eacute;diter un produit - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}

    <section class="text-gray-600 body-font" id="discover">
        <div class="sm:container px-8 sm:px-5 pt-6 mx-auto">
            <div class="flex items-center justify-center py-6 sm:px-2 lg:px-6">
                <h1 class="sm:text-3xl text-xl font-extrabold title-font text-black dark:text-white mb-4 uppercase tracking-wider title-underline">
                    Modifier un produit
                </h1>
            </div>
            <div class="w-full md:w-1/2 mx-auto flex items-center justify-center mb-5">
                {{ form_start(form, {attr: {class: 'w-full'}}) }}
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            {{ form_row(form.name) }}
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="sm:col-span-1 col-span-2">
                            {{ form_row(form.categories) }}
                        </div>
                        <div class="sm:col-span-1 col-span-2">
                            {{ form_row(form.type) }}
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2 sm:col-span-1">
                            {{ form_row(form.unitPrice) }}
                        </div>
                        <div class="col-span-2 sm:col-span-1">
                            {{ form_row(form.unitPriceDiscount) }}
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            {{ form_row(form.images) }}
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm font-bold rounded-full text-white bg-blue-700 hover:bg-blue-600">
                            Modifier ce produit
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    {% include 'footer.html.twig' %}
{% endblock %}
