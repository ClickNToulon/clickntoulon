{% extends 'base.html.twig' %}

{% block title 'Choisir votre boutique - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active' :'my-shop'} %}
    <div class="max-h-screen w-full">
        <div class="flex flex-col mx-auto py-12 items-center justify-center px-2 max-w-7xl top-1/5 absolute w-full sm:top-1/4 sm:right-0 sm:left-0 sm:container px-5">
            {{ form_start(form, {attr: {class: 'w-1/2 flex items-center justify-center flex-col'}}) }}
            <div class="text-center mb-10 w-full">
                <h1 class="sm:text-5xl text-3xl font-extrabold title-font text-black mb-4 uppercase whitespace-nowrap">Choisir une boutique</h1>
                <div class="flex mt-6 justify-center">
                    <div class="w-1/4 h-1 rounded-full bg-yellow-500 inline-flex"></div>
                </div>
            </div>
            <div class="relative mt-4 w-full">
                {{ form_row(form.select) }}
            </div>
            <button type="submit" name="select" class="inline-flex justify-center py-2 mt-3 px-4 w-full border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-500 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 focus:ring-offset-white">
                Choisir
            </button>
            {{ form_end(form) }}
        </div>
        <div class="absolute w-full bottom-0">
            {% include 'footer.html.twig' %}
        </div>
    </div>
{% endblock %}
