{% extends 'base.html.twig' %}

{% block title 'Choisir votre boutique - ClickNToulon' %}

{% block body %}
    <div class="h-screen-footer w-full flex items-center">
        <div class="flex flex-col mx-auto items-center justify-center px-2 max-w-7xl w-full container px-5">
            {{ form_start(form, {attr: {class: 'w-full tablet:w-1/2 flex items-center justify-center flex-col'}}) }}
            <div class="flex items-center justify-center mt-6">
                <h1 class="sm:text-5xl text-3xl font-extrabold title-font text-black dark:text-white mb-4 uppercase tracking-wider title-underline">Choisir une boutique</h1>
            </div>
            <div class="relative mt-4 w-2/3 tablet:w-1/2">
                {{ form_row(form.select) }}
            </div>
            <button type="submit" name="select" class="inline-flex justify-center py-1 mt-3 px-3 w-2/3 tablet:w-1/2 border border-transparent shadow-sm text-lg font-bold rounded-lg text-white bg-blue-700 hover:bg-blue-600 focus:bg-blue-800 active:bg-blue-800">
                Choisir
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
