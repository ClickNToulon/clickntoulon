{% extends 'base.html.twig' %}

{% block title 'Créer votre boutique - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}
    <section class="text-gray-400 body-font">
        <div class="sm:container px-5 mx-auto sm:max-w-7xl py-8 max-w-full">
            <div class="flex items-center justify-center flex-col max-w-full">
                {% for message in app.flashes('success') %}
                    <div class="bg-green-600 rounded-xl mb-2 w-full max-w-xl" id="successAlert">
                        <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                            <div class="flex items-center justify-between flex-wrap">
                                <div class="w-0 flex-1 flex items-center">
                                    <span class="flex p-2 rounded-lg bg-green-700">
                                      <!-- Heroicon name: outline/exclamation -->
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                      </svg>
                                    </span>
                                    <p class="ml-3 font-semibold text-white">
                                        <span class="inline">
                                            {{ message }}
                                        </span>
                                    </p>
                                </div>
                                <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                    <button type="button" class="flex p-2 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('successAlert')">
                                        <span class="sr-only">Fermer</span>
                                        <!-- Heroicon name: outline/x -->
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        function closeAlert(alertID) {
                            document.getElementById(alertID).classList.toggle('hidden');
                            document.getElementById(alertID).classList.toggle('block');
                        }
                    </script>
                {% endfor %}
            </div>
            <div class="w-full">
                <div class="block md:grid md:grid-cols-3 md:gap-6">
                    <div class="md:col-span-1">
                        <div class="px-4 sm:px-0">
                            <h3 class="text-xl font-semibold leading-6 text-black inline-flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                </svg>
                                <span class="ml-1">Informations de ma boutique</span>
                            </h3>
                            <p class="mt-1 text-base text-black">
                                Tous les champs doivent être remplis, sauf pour l'adresse mail qui est facultative
                            </p>
                        </div>
                    </div>
                    <div class="mt-5 md:mt-0 md:col-span-2">
                        {{ form_start(form) }}
                        <div class="shadow-2xl sm:overflow-hidden rounded-lg">
                            <div class="px-4 py-5 bg-white space-y-6 sm:p-6 rounded-t-lg">
                                <div class="grid grid-cols-2 gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.name) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.name) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.tag) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.tag) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.email) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.email) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.phone) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.phone) }}
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    {{ form_label(form.description) }}
                                    <div class="mt-1">
                                        {{ form_widget(form.description) }}
                                    </div>
                                </div>
                                <div>
                                    {{ form_label(form.address) }}
                                    <div class="mt-1">
                                        {{ form_widget(form.address) }}
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-6">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.postalCode) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.postalCode) }}
                                        </div>
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_label(form.city) }}
                                        <div class="mt-1 flex rounded-md shadow-sm">
                                            {{ form_widget(form.city) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="grid grid-cols-2 gap-6">
                                    <div class="col-span-2">
                                        {{ form_label(form.image) }}
                                        <div class="mt-1">
                                            {{ form_widget(form.image) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="px-4 py-3 bg-white text-right sm:px-6 rounded-b-lg">
                                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-base font-semibold rounded-md text-white bg-yellow-500 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 focus:ring-offset-white">
                                    Créer ma boutique
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include 'footer.html.twig' %}
{% endblock %}

