{% extends 'base.html.twig' %}

{% block title 'Créer votre boutique - TouSolidaires' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}
    <div class="container-md d-flex justify-content-center pt-5">
        <div class="toast-container position-absolute p-3">
            {% for message in app.flashes('success') %}
                <div role="alert" class="fr-alert fr-alert--success show" id="alert">
                    <p>{{ message }}</p>
                </div>
                <script>
                    const alert = document.querySelector("#alert")
                    console.log(alert)
                    setTimeout(() => {
                        alert.classList.remove('show')
                    }, 10000);
                </script>
            {% endfor %}
        </div>
        <div class="card card-bleed shadow-light-lg mb-5 seller-create">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi-shop-window"></i> Informations de ma boutique
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {attr: {class: 'user-update'}}) }}
                <div class="row mb-2">
                    <div class="col-12">
                        <div role="alert" class="fr-alert fr-alert--info fr-alert--sm">
                            <p>Tous les champs doivent être remplis, sauf pour l'adresse mail qui est facultatif</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.name) }}
                        {{ form_row(form.tag) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.email) }}
                        {{ form_row(form.phone) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.postal_code) }}
                        {{ form_row(form.city) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.cover) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="button-submit">
                            <button type="submit" class="btn btn-form" name="add_shop">Créer ma boutique</button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}

