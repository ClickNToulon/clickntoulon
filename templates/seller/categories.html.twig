{% extends 'base.html.twig' %}

{% block title 'Gérer les catégories de votre boutique - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {"active": "my-shop"} %}
    <div class="relative">
        <div class="absolute top-5 right-10 w-full max-w-md">
            {% for message in app.flashes('success') %}
                <div class="bg-green-600 w-full rounded-xl" id="successAlert">
                    <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                        <div class="flex items-center justify-between flex-wrap">
                            <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-lg bg-green-700">
                                    <!-- Heroicon name: outline/exclamation -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                </span>
                                <p class="ml-3 font-bold text-white">
                                    <span class="inline">
                                        {{ message }}
                                    </span>
                                </p>
                            </div>
                            <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                <button type="button" class="flex p-2 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('successAlert')">
                                    <span class="sr-only">Fermer</span>
                                    <!-- Heroicon name: outline/x -->
                                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    function closeAlert(alertID) {
                        document.getElementById(alertID).classList.toggle('hidden');
                        document.getElementById(alertID).classList.toggle('block');
                    }
                </script>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="bg-red-600 w-full rounded-xl" id="warningAlert">
                    <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                        <div class="flex items-center justify-between flex-wrap">
                            <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-lg bg-red-700">
                                    <!-- Heroicon name: outline/exclamation -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                </span>
                                <p class="ml-3 font-bold text-white">
                                    <span class="inline">
                                        {{ message }}
                                    </span>
                                </p>
                            </div>
                            <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                <button type="button" class="flex p-2 rounded-md hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('warningAlert')">
                                    <span class="sr-only">Fermer</span>
                                    <!-- Heroicon name: outline/x -->
                                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    function closeAlert(alertID) {
                        document.getElementById(alertID).classList.toggle('hidden');
                        document.getElementById(alertID).classList.toggle('block');
                    }
                </script>
            {% endfor %}
        </div>
    </div>
    {% include 'seller/_header.html.twig' %}
    <section class="text-gray-400 body-font">
        <div class="container px-5 py-12 pb-6 pt-6 mx-auto">
            <div class="flex justify-center flex-wrap -m-4">
                {% include 'seller/_tabs.html.twig' with {active: 'categories'} %}
            </div>
        </div>
        <div class="container mx-auto flex flex-col">
            <div class="flex items-center justify-between mt-6 sm:px-2 lg:px-6">
                <h1 class="sm:text-3xl text-xl font-extrabold title-font text-black dark:text-white mb-4 uppercase tracking-wider title-underline">
                    Les catégories
                </h1>
                <button class="px-3 py-2 bg-blue-700 hover:bg-blue-600 rounded-full font-semibold text-white w-auto text-center" onclick="openModal('addModal')">
                    Ajouter une catégorie
                </button>
                <div class="hidden z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" id="addModal" role="dialog" aria-modal="true">
                    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                        <!-- Background overlay, show/hide based on modal state. -->
                        <div class="fixed inset-0 bg-darkblue-800 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                        <!-- This element is to trick the browser into centering the modal contents. -->
                        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                        <!-- Modal panel, show/hide based on modal state. -->
                        <div class="inline-block align-bottom bg-darkblue-150 dark:bg-darkblue-900 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                            {{ form_start(form) }}
                            <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4 flex flex-col items-center justify-center w-full">
                                <h2 class="sm:text-2xl text-xl font-extrabold title-font text-black dark:text-white mb-4 uppercase tracking-wider title-underline">
                                    Ajouter une catégorie
                                </h2>
                                <div class="w-full">
                                    {{ form_label(form.name) }}
                                    <div class="mt-1">
                                        {{ form_widget(form.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="px-4 pb-3 sm:pb-6 sm:px-6 sm:flex sm:items-center sm:justify-center sm:flex-row-reverse">
                                <button type="submit" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-transparent shadow-sm px-4 py-2 sm:ml-3 bg-blue-600 hover:bg-blue-500 text-lg sm:text-sm font-bold text-white">
                                    Confirmer
                                </button>
                                <button type="button" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-blue-900 shadow-sm px-4 py-2 mt-3 sm:mt-0 hover:bg-blue-900 text-blue-900 hover:text-white dark:text-white text-lg sm:text-sm font-bold" onclick="openModal('addModal')">
                                    Revenir en arrière
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-col items-center">
                <div class="overflow-x-auto w-full">
                    <div class="py-2 align-middle inline-block min-w-full sm:px-2 lg:px-6">
                        {% if categories is not null and categories.items != [] %}
                            <div class="overflow-hidden rounded-xl">
                                <table class="min-w-full divide-y divide-blue-900 table-striped">
                                    <thead class="bg-darkblue-150 dark:bg-darkblue-800">
                                    <tr>
                                        <th scope="col" class="px-8 py-4 text-left font-bold text-black dark:text-gray-200 uppercase tracking-wider">
                                            ID
                                        </th>
                                        <th scope="col" class="px-8 py-4 text-left font-bold text-black dark:text-gray-200 uppercase tracking-wider">
                                            Nom
                                        </th>
                                        <th scope="col" class="relative px-8 py-4">
                                            <span class="sr-only">Actions</span>
                                            <span class="sr-only">Supprimer le produit</span>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="bg-darkblue-150 dark:bg-darkblue-800 divide-y divide-blue-900">
                                    {% for category in categories %}
                                        <tr>
                                            <td class="px-8 py-8 font-bold whitespace-nowrap text-gray-700 dark:text-gray-400">
                                                {{ category.id }}
                                            </td>
                                            <td class="px-8 py-8 font-bold text-lg whitespace-nowrap text-black dark:text-white">
                                                {{ category.name }}
                                            </td>
                                            <td class="px-8 py-8 text-right text-sm font-semibold space-x-1">
                                                <button class="px-3 py-1 text-lg border-2 border-red-600 hover:bg-red-600 rounded-full font-bold text-red-600 hover:text-white dark:text-white" onclick="openModal('deleteModal{{ category.id }}')">
                                                    Supprimer
                                                </button>
                                            </td>
                                            <div class="hidden z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" id="deleteModal{{ category.id }}" role="dialog" aria-modal="true">
                                                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                                                    <!-- Background overlay, show/hide based on modal state. -->
                                                    <div class="fixed inset-0 bg-darkblue-800 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                                                    <!-- This element is to trick the browser into centering the modal contents. -->
                                                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                                                    <!-- Modal panel, show/hide based on modal state. -->
                                                    <div class="inline-block align-bottom bg-darkblue-150 dark:bg-darkblue-900 rounded-xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                                                        <form action="{{ path('seller_delete_category', {id: shop.id, category: category.id}) }}" method="POST" name="order_delete">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('category_delete') }}">
                                                            <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                                                                <div class="sm:flex sm:items-start">
                                                                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-accent-red sm:mx-0 sm:h-10 sm:w-10">
                                                                        <!-- Heroicon name: outline/exclamation -->
                                                                        <svg class="h-6 w-6 text-red-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                                        </svg>
                                                                    </div>
                                                                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                                                        <h3 class="text-xl mt-1 font-bold text-black dark:text-white" id="modal-title">
                                                                            Supprimer la catégorie n°{{ category.id }}
                                                                        </h3>
                                                                        <div class="mt-2">
                                                                            <p class="font-medium text-black dark:text-white">
                                                                                Vous allez confirmer que vous voulez supprimer la catégorie n°{{ category.id }}.
                                                                            </p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="px-4 ml-4 pb-3 sm:pb-6 sm:px-6 sm:flex sm:items-center sm:justify-center sm:flex-row-reverse">
                                                                <button type="submit" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-transparent shadow-sm px-4 py-2 sm:ml-3 bg-red-600 hover:bg-red-500 text-lg sm:text-sm font-bold text-white">
                                                                    Confirmer
                                                                </button>
                                                                <button type="button" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-blue-900 shadow-sm px-4 py-2 mt-3 sm:mt-0 sm:ml-3 hover:bg-blue-900 text-blue-900 hover:text-white dark:text-white text-lg sm:text-sm font-bold" onclick="openModal('deleteModal{{ category.id }}')">
                                                                    Revenir en arrière
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <h1 class="text-3xl py-3 font-semibold text-black dark:text-white text-center">
                                Vous n'avez pas de catégories, mais vous pouvez en ajouter d&egrave;s maintenant
                            </h1>
                        {% endif %}
                    </div>
                </div>
            </div>
            {{ knp_pagination_render(categories) }}
        </div>
    </section>
    <script>
        function openModal(modalID) {
            document.getElementById(modalID).classList.toggle('hidden')
            document.getElementById(modalID).classList.toggle('fixed')
        }
    </script>
    {% include 'footer.html.twig' %}
{% endblock %}
