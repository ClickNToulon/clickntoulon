{% extends 'base.html.twig' %}

{% block title 'Gérer les produits de ma boutique - TouSolidaires' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'my-shop'} %}
    {% include 'seller/_header.html.twig' %}
    {% include 'seller/_tabs.html.twig' with {'active': 'products'} %}
    <div class="tab-content container">
        <div class="tab-pane active">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <h1>Liste des produits</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="fr-btn fr-btn--secondary btn-home-outline fr-btn--icon-left" data-fr-opened="false" aria-controls="fr-modal-2"><i class="bi-plus-circle"></i> Ajouter un nouveau produit</button>
                    </div>
                </div>
            </div>
            {% if products != false %}
            <table class="table table-light table-striped">
                <thead class="thead-light">
                <tr>
                    <th>N°</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Prix en promo</th>
                    <th>Actions</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price | format_currency('EUR') }}</td>
                    <td>{% if product.dealprice == null %}Pas de promo{% else %}{{ product.dealprice | format_currency('EUR') }}{% endif %}</td>
                    <td><a href="{{ path('seller_edit_product', {id: shop.id, product: product.id}) }}"><button class="btn btn-form mg-t-0">Modifier ce produit</button></a></td>
                    <td><a href=""><button class="btn btn-form btn-danger mg-t-0">Supprimer ce produit</button></a></td>
                </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td class="last text-bold">Total : {{ total_products }}</td>
                    <td class="last"></td>
                    <td class="last"></td>
                    <td class="last"></td>
                    <td class="last"></td>
                    <td class="last"></td>
                </tr>
                </tfoot>
            </table>
            {% else %}
            <h3 class="text-black">Vous n'avez pas de produits. Vous pouvez en rajouter d&egrave;s maintenant.</h3>
            {% endif %}
            <dialog aria-labelledby="fr-modal-2-title" id="fr-modal-2" class="fr-modal align-items-center justify-content-center" role="dialog">
                <div class="fr-container--fluid fr-container-md dialog-w-100">
                    <div class="fr-grid-row fr-grid-row--center">
                        <div class="fr-col-12 fr-col-md-6 dark-bg">
                            <div class="fr-modal__body">
                                <div class="fr-modal__header">
                                    <button class="fr-link--close fr-link" aria-controls="fr-modal-2">Fermer</button>
                                </div>
                                <div class="fr-modal__content forms">
                                    <h1 id="fr-modal-2-title" class="fr-modal__title mb-2">
                                        <span class="fr-fi-arrow-right-line fr-fi--lg"></span>
                                        Ajouter un nouveau produit
                                    </h1>
                                    {{ form_start(form, {attr: {class: 'add-product-form'}}) }}
                                        {{ form_row(form.name) }}
                                        {{ form_row(form.price) }}
                                        {{ form_row(form.description) }}
                                        {{ form_row(form.image) }}
                                </div>
                                <div class="fr-modal__footer">
                                    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--inline-lg">
                                        <li>
                                            <button type="button" class="fr-btn btn-danger" aria-controls="fr-modal-2">
                                                Annuler
                                            </button>
                                        </li>
                                        <li>
                                            <button type="submit" class="fr-btn btn-form" >
                                                Enregistrer
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </dialog>
        </div>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}
