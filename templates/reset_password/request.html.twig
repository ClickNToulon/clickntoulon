{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - ClickNToulon{% endblock %}

{% block body %}
    <div class="sm:container px-5 mx-auto flex items-center justify-center py-6 h-screen-footer">
        <div class="w-full max-w-xl h-auto">
            <div class="h-full w-full max-h-max p-12">
                <h1 class="text-4xl font-bold text-center mb-2 text-refresh-purple dark:text-white">Mot de passe oublié</h1>
                <button class="w-full pb-4 text-center text-refresh-purple dark:text-white font-bold" type="button">
                    ou
                    <a href="{{ path('app_login') }}" class="text-black dark:text-white underline decoration-[3px] underline-offset-4 decoration-sky-600">
                        se connecter à son compte
                    </a>
                </button>
                {% for message in app.flashes('warning') %}
                    <div class="bg-yellow-600 rounded-xl mb-2">
                        <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                            <div class="flex items-center justify-between flex-wrap">
                                <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-lg bg-yellow-700">
                                  <!-- Heroicon name: outline/exclamation -->
                                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                  </svg>
                                </span>
                                    <p class="ml-3 font-medium text-white">
                                    <span class="inline">
                                        {{ message }}
                                    </span>
                                    </p>
                                </div>
                                <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                    <button type="button" class="flex p-2 rounded-md hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1">
                                        <span class="sr-only">Fermer</span>
                                        <!-- Heroicon name: outline/x -->
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {{ form_start(requestForm, {attr: {class: 'space-y-1 w-full'}}) }}
                    <div class="flex flex-col">
                        <div class="relative">
                            {{ form_row(requestForm.email) }}
                        </div>
                        <div class="relative">
                            {{ form_row(requestForm._token) }}
                        </div>
                    </div>
                    <button class="w-full px-3 py-1 rounded-lg bg-sky-600 transition hover:bg-sky-500 relative" type="submit">
                        <span class="font-semibold text-white text-lg">Obtenir un nouveau mot de passe</span>
                    </button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
