{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - ClickNToulon{% endblock %}

{% block body %}
    <div class="min-h-screen max-h-screen bg-white flex justify-center items-center">
        <div class="py-6 px-6 sm:py-12 sm:px-12 shadow-2xl rounded-2xl shadow-xl z-20 absolute max-w-full sm:max-w-sm lg:max-w-lg w-full">
            {{ form_start(requestForm) }}
                <div>
                    <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer text-black">Mot de passe oublié</h1>
                </div>
                <div>
                    <div class="relative mb-4">
                        {{ form_row(requestForm.email) }}
                    </div>
                    <div class="relative mb-4">
                        {{ form_row(requestForm._token) }}
                    </div>
                </div>
                <div class="text-center mt-3">
                    <button class="py-2 px-3 w-auto text-xl text-white font-medium bg-yellow-500 rounded-2xl" type="submit">Demander un lien</button>
                    <p class="mt-4 text-black">Vous avez déjà un compte ? <a class="underline hover:text-yellow-500" href="{{ path('app_login') }}"> Connectez-vous</a></p>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
