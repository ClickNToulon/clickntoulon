{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - ClickNToulon{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'login'} %}
    <div class="container mx-auto flex items-center justify-center h-test">
        <div class="grid grid-cols-3 gap-y-6 desktop:gap-x-6 w-full h-auto place-items-center">
            <div class="bg-darkblue-800 desktop:col-span-1 col-span-3 h-full w-full max-w-xl max-h-[20.5rem] rounded-xl px-3 py-8 desktop:p-10">
                {{ form_start(requestForm, {attr: {class: 'w-full'}}) }}
                    <h1 class="text-4xl font-bold text-center mb-8 text-black dark:text-white capitalize">Mot de passe oublié</h1>
                    <div class="flex flex-col">
                        <div class="relative">
                            {{ form_row(requestForm.email) }}
                        </div>
                        <div class="relative mt-2">
                            {{ form_row(requestForm._token) }}
                        </div>
                    </div>
                    <div class="text-center mt-2">
                        <button class="py-2 px-3 w-full text-xl font-semibold text-white bg-blue-700 hover:bg-blue-600 rounded-full" type="submit">Demander un lien</button>
                        <p class="mt-3 text-base text-black dark:text-gray-300 font-semibold">Vous avez déjà un compte ? <a class="underline font-bold hover:text-blue-400 underline-offset-2" href="{{ path('app_login') }}"> Cliquez-ici</a></p>
                    </div>
                {{ form_end(requestForm) }}
            </div>
            <div class="w-full hidden desktop:flex desktop:col-span-2 items-center justify-center">
                <img class="h-96 object-cover" src="{{ asset('images/security.svg') }}" alt="">
            </div>
        </div>
    </div>
{% endblock %}
