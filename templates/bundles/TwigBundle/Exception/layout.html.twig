{% extends 'base.html.twig' %}

{% block title %}
    Une erreur est survenue : {% block title_error %}{% endblock %}
{% endblock %}
{% block body %}
<section class="w-full min-h-screen bg-white dark:bg-gray-700">
    <div class="container flex flex-col items-center justify-center px-5 py-5 m-auto min-h-screen w-full">
        <!-- Heading -->
        <h1 class="text-center text-6xl text-black dark:text-white font-bold mb-2">
            Uh Oh.
        </h1>
        <h4 class="mb-3 text-center text-2xl text-black dark:text-white font-bold">
            {% block error %}{% endblock %}
        </h4>
        <!-- Text -->
        <p class="mb-3 text-center text-xl text-black dark:text-white">
                Nous avons rencontré une erreur, mais nous allons nous en occuper
        </p>
        <!-- Link -->
        <a class="flex items-center justify-center px-10 py-4 border border-transparent text-base font-medium rounded-2xl text-white bg-yellow-600 hover:bg-yellow-700 md:py-3 md:text-lg md:px-8 focus:ring-2 focus:ring-offset-2 focus:ring-yellow-600 focus:ring-offset-white dark:focus:ring-offset-gray-700" href="{{ path('home') }}">
            Retour à l'accueil
        </a>
    </div>
</section>
{% endblock %}