{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="flex items-center justify-center mt-6">
        <div class="flex items-center flex-row w-auto">
            {% if first is defined and current != first %}
                <span class="bg-white dark:bg-gray-800 shadow dark:shadow-none text-yellow-500 px-3 py-2 text-lg rounded-xl mx-1 ml-0 font-medium">
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% if previous is defined %}
                <span class="bg-white dark:bg-gray-800 shadow dark:shadow-none text-yellow-500 px-3 text-lg py-2 rounded-xl mx-1">
                    <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <span class="bg-white dark:bg-gray-800 shadow dark:shadow-none text-yellow-500 px-3 py-2 text-lg mx-1 rounded-xl font-bold">
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </span>
                {% else %}
                    <span class="bg-yellow-500 dark:bg-yellow-600 text-black px-3 py-2 text-lg rounded-xl mx-1 font-bold">{{ page }}</span>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <span class="bg-white dark:bg-gray-800 shadow dark:shadow-none text-yellow-500 px-3 py-2 text-lg rounded-xl mx-1">
                    <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% if last is defined and current != last %}
                <span class="bg-white dark:bg-gray-800 shadow dark:shadow-none text-yellow-500 px-3 py-2 text-lg rounded-xl mx-1 mr-0 font-bold">
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                        </svg>
                    </a>
                </span>
            {% endif %}
        </div>
    </div>
{% endif %}