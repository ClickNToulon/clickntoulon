{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="flex items-center justify-center mt-6">
        <div class="flex items-center flex-row w-auto rounded-xl bg-darkblue-500 dark:bg-darkblue-800">
            {% if first is defined and current != first %}
                <span class="text-white hover:text-blue-900 dark:hover:text-blue-400 px-1.5 py-1 text-lg font-bold">
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% if previous is defined %}
                <span class="text-white hover:text-blue-400 px-1.5 py-1 text-lg font-bold">
                    <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <span class="border-4 border-transparent text-white hover:text-blue-400 px-3 py-1 text-lg font-bold">
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </span>
                {% else %}
                    <span class="text-white dark:text-blue-400 hover:bg-blue-500 hover:text-white border-4 border-blue-500 rounded-xl px-3 py-1 text-lg font-bold transition-all duration-200">{{ page }}</span>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <span class="text-white hover:text-blue-400 px-1.5 py-1 text-lg font-bold">
                    <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </span>
            {% endif %}

            {% if last is defined and current != last %}
                <span class="text-white hover:text-blue-400 px-1.5 py-1 text-lg font-bold">
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                        </svg>
                    </a>
                </span>
            {% endif %}
        </div>
    </div>
{% endif %}
