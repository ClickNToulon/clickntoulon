{% if pageCount > 1 %}
    <div class="flex items-center justify-center w-full mt-6">
        <div class="flex items-center flex-row w-full">
            <ul class="space-x-6 lg:space-x-3 border-t-2 border-slate-100 dark:border-slate-800 flex flex-row justify-between w-full">
                <li>
                    <a
                       rel="prev"
                       class="flex flex-row items-center text-lg font-medium border-t-[2px] -mt-[2px] p-3 font-bold text-lg tracking-wide border-transparent hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white"
                       {% if previous is defined %}
                           href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                       {% else%}
                           disabled
                       {% endif %}
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
                        </svg>
                        Précédent
                    </a>
                </li>
                <ul class="flex flex-row space-x-6 lg:space-x-4">
                    {% for page in pagesInRange %}
                        {% if page != current %}
                            <li>
                                <a
                                    class="block border-t-[2px] p-3 -mt-[2px] font-medium text-lg tracking-wide border-transparent hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white"
                                    href="{{ path(route, query|merge({(pageParameterName): page})) }}"
                                >
                                    {{ page }}
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a
                                    class="block border-t-[2px] p-3 -mt-[2px] font-semibold text-lg tracking-wide text-sky-500 dark:text-sky-400 border-current"
                                >
                                    {{ page }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <li>
                    <a
                        rel="next"
                        class="flex flex-row items-center text-lg text-black dark:text-white font-medium border-t-[2px] -mt-[2px] p-3 font-bold text-lg tracking-wide border-transparent hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white"
                        {% if next is defined %}
                            href="{{ path(route, query|merge({(pageParameterName): next})) }}"
                        {% else %}
                            disabled
                        {% endif %}
                    >
                        Suivant
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                </li>
            </ul>

            {#{% if last is defined and current != last %}
                <span class="text-white hover:text-blue-500 px-1.5 py-1 text-lg font-bold">
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
                        </svg>
                    </a>
                </span>
            {% endif %}#}
        </div>
    </div>
{% endif %}
