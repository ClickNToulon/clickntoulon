{% extends 'base.html.twig' %}

{% block title 'Créer un utilisateur - Administration - TouSolidaires' %}

{% block body %}
    <div class="d-flex flex-row">
        {% include 'admin/sidebar.html.twig' with {'active': 'users'} %}
        <div class="fr-container fr-container--fluid">
            {{ form_start(form, {attr: {class: 'user-modify'}}) }}
            <h3 class="user-modify-title"><i class="bi-person-lines-fill"></i> Mes informations</h3>
            <div class="forms form-modify">
                <div class="fr-alert fr-alert--info fr-alert--sm">
                    <p>Tous les champs doivent être remplis</p>
                </div>
                <div class="row first">
                    <div class="col-12 form-row">
                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 form-row form-address">
                        {{ form_row(form.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 form-row">
                        {{ form_row(from.postal_code) }}
                        {{ form_row(form.city) }}
                    </div>
                </div>
            </div>
            <div class="button-submit">
                <button type="submit" class="btn btn-form">Modifier mon profil</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}