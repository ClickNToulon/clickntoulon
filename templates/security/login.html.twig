{% extends 'base.html.twig' %}

{% block title  'Connexion - ClickNToulon'%}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'login'} %}
    <div class="container mx-auto flex items-center justify-center h-test">
        <div class="grid grid-cols-3 gap-y-6 desktop:gap-x-6 w-full h-auto place-items-center">
            <div class="flex flex-col items-center justify-center w-full">
                <div class="bg-darkblue-150 dark:bg-darkblue-800 desktop:col-span-1 col-span-3 h-full w-full max-w-xl max-h-max rounded-xl px-3 py-8 desktop:p-10">
                    {% if error %}
                        <div class="bg-red-600 rounded-xl mb-2 lg:mb-4 -mt-2 lg:-mt-6" id="warningAlert">
                            <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                                <div class="flex items-center justify-between flex-wrap">
                                    <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-xl bg-red-700">
                                  <!-- Heroicon name: outline/exclamation -->
                                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                  </svg>
                                </span>
                                        <p class="ml-3 font-semibold text-white">
                                        <span class="inline">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </span>
                                        </p>
                                    </div>
                                    <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                        <button type="button" class="flex p-2 rounded-xl hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('warningAlert')">
                                            <span class="sr-only">Fermer</span>
                                            <!-- Heroicon name: outline/x -->
                                            <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            function closeAlert(alertID) {
                                document.getElementById(alertID).classList.toggle('hidden');
                                document.getElementById(alertID).classList.toggle('block');
                            }
                        </script>
                    {% endif %}
                    <form method="post" class="w-full" autocomplete="off">
                        <h1 class="text-4xl font-bold text-center mb-4 text-black dark:text-white capitalize">Connectez-vous</h1>
                        <div class="flex flex-col">
                            <div class="relative">
                                <label for="email" class="block text-base font-bold text-black dark:text-gray-300">Adresse Email</label>
                                <input type="email" name="email" id="email" required class="w-full rounded-xl mt-1 mb-4 text-black dark:text-white font-bold bg-darkblue-200 dark:bg-darkblue-800 border-2 border-blue-700 dark:border-blue-800 focus:border-blue-600 dark:focus:border-blue-500 placeholder:text-gray-700 dark:placeholder:text-gray-400" placeholder="johndoe@exemple.com" />
                            </div>
                            <div class="relative mt-1">
                                <label for="password" class="block text-base font-bold text-black dark:text-gray-300">Mot de passe</label>
                                <input type="password" name="password" id="password" autocomplete="current-password" required class="w-full rounded-xl mt-1 mb-4 text-black dark:text-white font-bold bg-darkblue-200 dark:bg-darkblue-800 border-2 border-blue-700 dark:border-blue-800 focus:border-blue-600 dark:focus:border-blue-500" />
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="flex w-full items-baseline space-y-1 xs:space-y-0 xs:items-start justify-between shrink-1 xs:flex-row flex-col mt-1 px-3">
                                <div class="relative">
                                    <label class="inline-flex items-center align-middle" for="_remember_me">
                                        <input type="checkbox" class="rounded border-2 border-blue-900 dark:border-blue-600 text-blue-500 focus:border-blue-500" name="_remember_me" id="_remember_me">
                                        <span class="text-black dark:text-gray-300 font-semibold">Se souvenir de moi</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button class="py-2 px-3 w-full text-xl font-semibold text-white bg-blue-700 hover:bg-blue-600 rounded-full" type="submit">Se connecter</button>
                            <a href="{{ path('google_connect') }}" class="w-full flex flex-row items-center justify-center px-3 py-2 rounded-full bg-[#dd4b39] hover:bg-[#C64333] text-white font-bold mt-2 text-xl">
                                <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="mr-3">
                                    <path fill="currentColor" d="M12.24 10.285V14.4h6.806c-.275 1.765-2.056 5.174-6.806 5.174-4.095 0-7.439-3.389-7.439-7.574s3.345-7.574 7.439-7.574c2.33 0 3.891.989 4.785 1.849l3.254-3.138C18.189 1.186 15.479 0 12.24 0c-6.635 0-12 5.365-12 12s5.365 12 12 12c6.926 0 11.52-4.869 11.52-11.726 0-.788-.085-1.39-.189-1.989H12.24z"/>
                                </svg>
                                <span>Se connecter avec Google</span>
                            </a>
                            <p class="mt-4 text-lg text-black dark:text-gray-300 font-semibold">Mot de passe oubli√© ? <a class="underline font-bold hover:text-blue-700 dark:hover:text-blue-400 underline-offset-2" href="{{ path('app_forgot_password_request') }}"> Cliquez-ici</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="w-full hidden desktop:flex desktop:col-span-2 items-center justify-center">
                <img class="h-96 object-cover" src="{{ asset('images/security.svg') }}" alt="">
            </div>
        </div>
    </div>
{% endblock %}
