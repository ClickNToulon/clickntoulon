{% extends 'base.html.twig' %}

{% block title 'Verification de votre email - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {active: 'verify-email'} %}
    <div class="max-h-screen w-full">
        <div class="sm:container px-5 py-5 sm:py-0 mx-auto flex justify-center items-center flex-col top-1/4 absolute w-full sm:top-1/3 sm:right-0 sm:left-0">
            {% for message in app.flashes('warning') %}
                <div class="bg-yellow-600 rounded-xl mb-2 w-full">
                    <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                        <div class="flex items-center justify-between flex-wrap">
                            <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-lg bg-yellow-700">
                                    <!-- Heroicon name: outline/exclamation -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                </span>
                                <p class="ml-3 font-medium text-white">
                                    <span class="inline">
                                        {{ message }}
                                    </span>
                                </p>
                            </div>
                            <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                <button type="button" class="flex p-2 rounded-md hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1">
                                    <span class="sr-only">Fermer</span>
                                    <!-- Heroicon name: outline/x -->
                                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="bg-green-600 rounded-xl mb-2 w-full">
                    <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                        <div class="flex items-center justify-between flex-wrap">
                            <div class="w-0 flex-1 flex items-center">
                                <span class="flex p-2 rounded-lg bg-green-700">
                                    <!-- Heroicon name: outline/exclamation -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                </span>
                                <p class="ml-3 font-medium text-white">
                                    <span class="inline">
                                        {{ message }}
                                    </span>
                                </p>
                            </div>
                            <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                <button type="button" class="flex p-2 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1">
                                    <span class="sr-only">Fermer</span>
                                    <!-- Heroicon name: outline/x -->
                                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="flex w-full mx-auto justify-center items-center flex-col sm:flex-row py-4 space-y-4 sm:space-y-0 sm:space-x-6 max-w-lg">
                <a href="{{ path('app_login') }}" class="w-full flex items-center justify-center px-10 py-4 border border-transparent text-base font-medium rounded-2xl text-white bg-yellow-600 hover:bg-yellow-700 md:py-3 md:text-lg md:px-8 focus:ring-2 focus:ring-offset-2 focus:ring-yellow-600 focus:ring-offset-white dark:focus:ring-offset-gray-700">
                    Se connecter
                </a>
                <a href="{{ path('home') }}" class="w-full flex items-center justify-center px-10 py-4 border border-transparent text-base font-medium rounded-2xl dark:text-white bg-yellow-500 hover:bg-yellow-600 md:py-3 md:text-lg md:px-8 focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 focus:ring-offset-white dark:focus:ring-offset-gray-700">
                    Retourner Ã  l'accueil
                </a>
            </div>
        </div>
        <div class="absolute bottom-0 w-full">
            {% include 'footer.html.twig' %}
        </div>
    </div>
{% endblock %}