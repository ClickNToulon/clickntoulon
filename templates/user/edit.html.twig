{% extends 'base.html.twig' %}

{% block title 'Modifier mes informations - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'user'} %}
    {% include 'user/_header.html.twig' %}
    <section class="text-gray-400 body-font pb-10">
        <div class="container px-5 max-w-7xl mx-auto">
            <div class="space-y-24">
                <div id="informations">
                    <div class="flex items-center justify-center flex-col max-w-full">
                        {% for message in app.flashes('success') %}
                            <div class="bg-green-600 rounded-xl mb-2 w-full max-w-xl" id="successAlert">
                                <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                                    <div class="flex items-center justify-between flex-wrap">
                                        <div class="w-0 flex-1 flex items-center">
                                            <span class="flex p-2 rounded-lg bg-green-700">
                                              <!-- Heroicon name: outline/exclamation -->
                                              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                              </svg>
                                            </span>
                                            <p class="ml-3 font-medium text-white">
                                                <span class="inline">
                                                    {{ message }}
                                                </span>
                                            </p>
                                        </div>
                                        <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                            <button type="button" class="flex p-2 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('successAlert')">
                                                <span class="sr-only">Fermer</span>
                                                <!-- Heroicon name: outline/x -->
                                                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                function closeAlert(alertID) {
                                    document.getElementById(alertID).classList.toggle('hidden');
                                    document.getElementById(alertID).classList.toggle('block');
                                }
                            </script>
                        {% endfor %}
                    </div>
                    <div class="w-full">
                        <div class="w-full">
                            <div>
                                {{ form_start(form_profile, {attr: {class: 'relative'}}) }}
                                <div class="dark:hidden absolute inset-0 group-hover:-inset-0.5 bg-yellow-500 rounded-xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                                <div class="rounded-xl bg-white dark:bg-darkblue-800 relative">
                                    <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                        <h2 class="text-white text-center text-3xl font-bold title-underline mb-4">Mes informations</h2>
                                        <div class="w-full">
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_name" class="block text-base font-bold text-black">
                                                        {{ form_label(form_profile.name) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.name) }}
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_surname" class="block text-base font-medium text-black">
                                                        {{ form_label(form_profile.surname) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.surname) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_email" class="block text-base font-medium text-black">
                                                        {{ form_label(form_profile.email) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.email) }}
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_postal_code" class="block text-base font-medium text-black">
                                                        {{ form_label(form_profile.phone) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.phone) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <label for="update_user_form_address" class="block text-base font-medium text-black">
                                                    {{ form_label(form_profile.address) }}
                                                </label>
                                                <div class="mt-1">
                                                    {{ form_widget(form_profile.address) }}
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_email" class="block text-base font-medium text-black">
                                                        {{ form_label(form_profile.postalCode) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.postalCode) }}
                                                    </div>
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    <label for="update_user_form_postal_code" class="block text-base font-medium text-black">
                                                        {{ form_label(form_profile.city) }}
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        {{ form_widget(form_profile.city) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4 text-center">
                                            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-base font-bold rounded-full text-white bg-blue-600 hover:bg-blue-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-white dark:focus:ring-offset-darkblue-800">
                                                Sauvegarder les changements
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form_profile) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div id="mot-de-passe">
                    <div>
                        {{ form_start(form_password, {attr: {class: 'relative'}}) }}
                        <div class="dark:hidden absolute inset-0 group-hover:-inset-0.5 bg-yellow-500 rounded-xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                        <div class="rounded-xl bg-white dark:bg-darkblue-800 relative">
                            <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                <h2 class="text-white text-center text-3xl font-bold title-underline mb-4">Mot de passe</h2>
                                <div class="grid grid-cols-2 gap-6 w-full">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_row(form_password.password.first) }}
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_row(form_password.password.second) }}
                                    </div>
                                </div>
                                <div class="mt-4 text-center">
                                    <button type="submit" class="inline-flex justify-center py-2 px-4 shadow-sm text-base font-bold rounded-full text-white bg-blue-600 hover:bg-blue-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-white dark:focus:ring-offset-darkblue-800">
                                        Sauvegarder le mot de passe
                                    </button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form_password) }}
                    </div>
                </div>
                <div id="avance">
                    <div>
                        {{ form_start(form_delete, {attr: {class: 'relative'}}) }}
                        <div class="dark:hidden absolute inset-0 group-hover:-inset-0.5 bg-yellow-500 rounded-xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                        <div class="rounded-xl bg-white dark:bg-darkblue-800 relative">
                            <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                <h2 class="text-white text-center text-3xl font-bold title-underline title-underline-danger mb-4">Danger Zone</h2>
                                <div class="text-center flex items-center flex-col">
                                    <p class="mt-2 text-black dark:text-gray-100 font-bold text-lg">
                                        Vous n'&ecirc;tes pas satisfait du contenu propos&eacute;
                                        sur le site ?<br>
                                        Ou vous souhaitez supprimer toutes les informations associ&eacute;es à votre
                                        compte ?
                                    </p>
                                    <p class="mt-2 text-black dark:text-gray-100 font-bold text-lg">
                                        Cette fonctionnalit&eacute; va supprimer toutes les donn&eacute;es
                                        relatives &agrave; votre profil, ainsi que toutes vos commandes pass&eacute;es
                                        sur le site.
                                    </p>
                                    {{ form_row(form_delete.id) }}
                                </div>
                                <div class="mt-4 text-center">
                                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-base font-bold rounded-full text-white bg-red-700 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 focus:ring-offset-white dark:focus:ring-offset-darkblue-800">
                                        Supprimer votre compte
                                    </button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form_delete) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include 'footer.html.twig' %}
{% endblock %}