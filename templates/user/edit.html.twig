{% extends 'base.html.twig' %}

{% block title 'Modifier mes informations - ClickNToulon' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'user'} %}
    {% include 'user/_header.html.twig' %}
    <section class="text-gray-400 body-font pb-10">
        <div class="container px-5 max-w-7xl mx-auto">
            <div class="space-y-24">
                <div id="informations">
                    <div class="flex items-center justify-center flex-col max-w-full">
                        {% for message in app.flashes('success') %}
                            <div class="bg-green-600 rounded-xl mb-2 w-full max-w-xl" id="successAlert">
                                <div class="max-w-7xl mx-auto py-3 px-3 rounded-xl">
                                    <div class="flex items-center justify-between flex-wrap">
                                        <div class="w-0 flex-1 flex items-center">
                                            <span class="flex p-2 rounded-lg bg-green-700">
                                              <!-- Heroicon name: outline/exclamation -->
                                              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                              </svg>
                                            </span>
                                            <p class="ml-3 font-medium text-white">
                                                <span class="inline">
                                                    {{ message }}
                                                </span>
                                            </p>
                                        </div>
                                        <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                                            <button type="button" class="flex p-2 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-white -mr-1" onclick="closeAlert('successAlert')">
                                                <span class="sr-only">Fermer</span>
                                                <!-- Heroicon name: outline/x -->
                                                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                function closeAlert(alertID) {
                                    document.getElementById(alertID).classList.toggle('hidden');
                                    document.getElementById(alertID).classList.toggle('block');
                                }
                            </script>
                        {% endfor %}
                    </div>
                    <div class="w-full">
                        <div class="w-full">
                            <div>
                                {{ form_start(form_profile, {attr: {class: 'relative'}}) }}
                                <div class="rounded-xl bg-darkblue-150 dark:bg-darkblue-800">
                                    <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                        <h2 class="text-black dark:text-white text-center text-3xl font-bold title-underline mb-4">Mes informations</h2>
                                        <div class="w-full">
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.name) }}
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.surname) }}
                                                </div>
                                            </div>
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.email) }}
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.phone) }}
                                                </div>
                                            </div>
                                            <div>
                                                {{ form_row(form_profile.address) }}
                                            </div>
                                            <div class="grid grid-cols-2 gap-6">
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.postalCode) }}
                                                </div>
                                                <div class="col-span-2 sm:col-span-1">
                                                    {{ form_row(form_profile.city) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4 text-center">
                                            <button type="submit" class="inline-flex justify-center py-1 px-3 border border-transparent shadow-sm text-base font-bold rounded-full text-white bg-blue-600 hover:bg-blue-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-white dark:focus:ring-offset-darkblue-800">
                                                Sauvegarder les changements
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form_profile) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div id="mot-de-passe">
                    <div>
                        {{ form_start(form_password) }}
                        <div class="rounded-xl bg-darkblue-150 dark:bg-darkblue-800">
                            <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                <h2 class="text-black dark:text-white text-center text-3xl font-bold title-underline mb-4">Mot de passe</h2>
                                <div class="grid grid-cols-2 gap-6 w-full">
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_row(form_password.password.first) }}
                                    </div>
                                    <div class="col-span-2 sm:col-span-1">
                                        {{ form_row(form_password.password.second) }}
                                    </div>
                                </div>
                                <div class="mt-4 text-center">
                                    <button type="submit" class="inline-flex justify-center py-1 px-3 shadow-sm text-base font-bold rounded-full text-white bg-blue-600 hover:bg-blue-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-white dark:focus:ring-offset-darkblue-800">
                                        Sauvegarder le mot de passe
                                    </button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form_password) }}
                    </div>
                </div>
                <div id="avance">
                    <div>
                        <div>
                            <div class="rounded-xl bg-darkblue-150 dark:bg-darkblue-800 relative">
                                <div class="px-4 py-2 sm:p-6 flex items-center justify-center flex-col w-full">
                                    <h2 class="text-black dark:text-white text-center text-3xl font-bold title-underline title-underline-danger mb-4">Danger Zone</h2>
                                    <div class="text-center flex items-center flex-col">
                                        <p class="mt-2 text-black dark:text-gray-100 font-bold text-lg">
                                            Vous n'&ecirc;tes pas satisfait du contenu propos&eacute;
                                            sur le site ?<br>
                                            Ou vous souhaitez supprimer toutes les informations associ&eacute;es Ã  votre
                                            compte ?
                                        </p>
                                        <p class="mt-2 text-black dark:text-gray-100 font-bold text-lg">
                                            Cette fonctionnalit&eacute; va supprimer toutes les donn&eacute;es
                                            relatives &agrave; votre profil, ainsi que toutes vos commandes pass&eacute;es
                                            sur le site.
                                        </p>
                                    </div>
                                    <div class="mt-4 text-center">
                                        <button type="button" class="inline-flex justify-center py-1 px-3 border border-transparent shadow-sm text-base font-bold rounded-full text-white bg-red-700 hover:bg-red-600" onclick="openModal('deleteModal')">
                                            Supprimer votre compte
                                        </button>
                                        <div class="hidden z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" id="deleteModal" role="dialog" aria-modal="true">
                                            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                                                <!-- Background overlay, show/hide based on modal state. -->
                                                <div class="fixed inset-0 bg-darkblue-800 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                                                <!-- This element is to trick the browser into centering the modal contents. -->
                                                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                                                <!-- Modal panel, show/hide based on modal state. -->
                                                <div class="inline-block align-bottom bg-darkblue-150 dark:bg-darkblue-900 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                                                    {{ form_start(form_delete) }}
                                                        {{ form_row(form_delete.id) }}
                                                        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                                                            <div class="sm:flex sm:items-start">
                                                                <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-accent-red sm:mx-0 sm:h-10 sm:w-10">
                                                                    <!-- Heroicon name: outline/exclamation -->
                                                                    <svg class="h-6 w-6 text-red-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                                    </svg>
                                                                </div>
                                                                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                                                                    <h3 class="mt-1 text-xl font-bold text-black dark:text-gray-200" id="modal-title">
                                                                        Supprimer votre compte
                                                                    </h3>
                                                                    <div class="mt-2 font-semibold text-black dark:text-gray-200">
                                                                        <p class="text-md">
                                                                            Vous allez confirmer que vous voulez supprimer votre compte chez ClickNToulon.
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="px-4 ml-4 pb-3 sm:pb-6 sm:px-6 sm:ml-0 sm:flex sm:items-center sm:justify-center sm:flex-row-reverse">
                                                            <button type="submit" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-transparent shadow-sm px-4 py-2 sm:ml-3 bg-red-600 hover:bg-red-500 text-lg sm:text-sm font-bold text-white">
                                                                Supprimer votre compte
                                                            </button>
                                                            <button type="button" class="w-full sm:w-auto inline-flex justify-center rounded-full border-2 border-blue-900 shadow-sm px-4 py-2 mt-3 sm:mt-0 sm:ml-3 hover:bg-blue-900 text-blue-900 hover:text-white dark:text-white text-lg sm:text-sm font-bold" onclick="openModal('deleteModal')">
                                                                Revenir en arriÃ¨re
                                                            </button>
                                                        </div>
                                                    {{ form_end(form_delete) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function openModal(modalID) {
            document.getElementById(modalID).classList.toggle('hidden')
            document.getElementById(modalID).classList.toggle('fixed')
        }
    </script>
    {% include 'footer.html.twig' %}
{% endblock %}