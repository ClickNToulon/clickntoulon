                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set i = 0 %}
                    {% for product in products %}
                        <tr>
                            <td class="td-name">{{ product.name }}</td>
                            <td>{{ product.price | format_currency('EUR') }}</td>
                            <td>x{{ quantities[i] }}</td>
                            {% set i = i + 1 %}
                        </tr>
                    {% endfor %}
                    </tbody>
