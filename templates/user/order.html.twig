    <section class="bg-white dark:bg-gray-700 m-2">
        <div class="sm:container px-5 sm:py-24 py-12 mx-auto flex flex-wrap">
            <div class="flex flex-wrap">
                <div class="lg:w-2/5 md:w-1/2 md:pr-10 md:py-6">
                    <div class="flex relative pb-12">
                        <div class="h-full w-10 absolute inset-0 flex items-center justify-center">
                            <div class="h-full w-1 {% if order.status > 0%}bg-green-500{% else %}bg-gray-300 dark:bg-gray-800{% endif%} pointer-events-none"></div>
                        </div>
                        <div class="flex-shrink-0 w-10 h-10 rounded-full {% if order.status > 0 %}bg-green-500{% else %}bg-gray-600{% endif %} inline-flex items-center justify-center text-white relative z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="flex-grow pl-4 justify-center items-center pt-2">
                            <h2 class="font-medium title-font text-base text-black dark:text-white tracking-wider">Commande en attente de validation</h2>
                        </div>
                    </div>
                    <div class="flex relative pb-12">
                        <div class="h-full w-10 absolute inset-0 flex items-center justify-center">
                            <div class="h-full w-1 {% if order.status > 1%}bg-green-500{% else %}bg-gray-300 dark:bg-gray-800{% endif%} pointer-events-none"></div>
                        </div>
                        <div class="flex-shrink-0 w-10 h-10 rounded-full {% if order.status > 1 %}bg-green-500{% else %}bg-gray-600{% endif %} inline-flex items-center justify-center text-white relative z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="flex-grow pl-4 justify-center items-center pt-2">
                            <h2 class="font-medium title-font text-base text-black dark:text-white tracking-wider">Commande validée</h2>
                        </div>
                    </div>
                    <div class="flex relative pb-12">
                        <div class="h-full w-10 absolute inset-0 flex items-center justify-center">
                            <div class="h-full w-1 {% if order.status > 2%}bg-green-500{% else %}bg-gray-300 dark:bg-gray-800{% endif%} pointer-events-none"></div>
                        </div>
                        <div class="flex-shrink-0 w-10 h-10 rounded-full {% if order.status > 2 %}bg-green-500{% else %}bg-gray-600{% endif %} inline-flex items-center justify-center text-white relative z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="flex-grow pl-4 pt-2">
                            <h2 class="font-medium title-font text-base text-black dark:text-white tracking-wider">Commande en cours de préparation</h2>
                        </div>
                    </div>
                    <div class="flex relative pb-12">
                        <div class="h-full w-10 absolute inset-0 flex items-center justify-center">
                            <div class="h-full w-1 {% if order.status > 3%}bg-green-500{% else %}bg-gray-300 dark:bg-gray-800{% endif%} pointer-events-none"></div>
                        </div>
                        <div class="flex-shrink-0 w-10 h-10 rounded-full {% if order.status > 3 %}bg-green-500{% else %}bg-gray-600{% endif %} inline-flex items-center justify-center text-white relative z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="flex-grow pl-4 pt-2">
                            <h2 class="font-medium title-font text-base text-black dark:text-white tracking-wider">Commande prête</h2>
                        </div>
                    </div>
                    <div class="flex relative">
                        <div class="flex-shrink-0 w-10 h-10 rounded-full {% if order.status > 4 %}bg-green-500{% else %}bg-gray-600{% endif %} inline-flex items-center justify-center text-white relative z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="flex-grow pl-4 pt-2">
                            <h2 class="font-medium title-font text-base text-black dark:text-white tracking-wider">Commande récupérée</h2>
                        </div>
                    </div>
                </div>
                <div class="lg:w-3/5 md:w-1/2 rounded-lg md:mt-0 mt-12 dark:bg-gray-800">
                    <div class="flex flex-col p-4 w-full">
                        <div class="text-center w-full">
                            <h1 class="text-2xl text-black dark:text-white font-medium">Commande n°{{ order.number }}</h1>
                        </div>
                        <div class="pt-3 flex flex-col">
                            <div class="flex flex-col">
                                <div>
                                    <h1 class="font-medium text-black dark:text-white text-xl">{{ shop.name }}</h1>
                                </div>
                                <div class="py-3">
                                    <ul role="list" class="list-none space-y-2 flex flex-col">
                                        <li class="text-black dark:text-white inline-flex items-center hover:text-yellow-500">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                            </svg>
                                            <span class="text-black dark:text-white ml-1 hover:text-yellow-500">{{ shop.address }} {{ shop.postalcode }} {{ shop.city }}</span>
                                        </li>
                                        <li class="text-black dark:text-white inline-flex items-center hover:text-yellow-500">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                            </svg>
                                            {% set splitArray = shop.phone|split('', 1) %}
                                            {% set first = splitArray|first %}
                                            {% set firstArray =  [0, first] | join('') %}
                                            {% set splitArray = splitArray|slice(1) %}
                                            {% set splitArray = splitArray|join('') %}
                                            {% set lastArray = [firstArray, splitArray] |join('') %}
                                            {% set finalSplit = lastArray|split('', 2) %}
                                            {% set formattedString = finalSplit|join(' ') %}
                                            <span class="text-black dark:text-white hover:text-yellow-500 ml-1"><a href="tel:{{ shop.phone }}">{{ formattedString }}</a></span>
                                        </li>
                                        {% if shop.email != null %}
                                            <li class="text-black dark:text-white inline-flex items-center hover:text-yellow-500">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                                </svg>
                                                <span class="text-black dark:text-white ml-1 hover:text-yellow-500"><a href="mailto:{{ shop.email }}">{{ shop.email }}</a></span>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                            <div class="sm:pt-4">
                                {% set i = 0 %}
                                {% for product in products %}
                                <div class="border-t border-gray-200 dark:border-gray-600 px-4 py-5 sm:px-6 space-y-6">
                                    <div class="flex sm:flex-row flex-col">
                                        <div class="w-full sm:w-1/3 pb-2 sm:pb-0">
                                            <img class="rounded" src="{{ asset('uploads/products/' ~ product.images[0]) }}" alt="">
                                        </div>
                                        <div class="flex flex-col px-4">
                                            <div class="flex flex-row justify-between mb-2">
                                                <h1 class="font-medium text-black dark:text-white text-lg">{{ product.name }} (x{{ quantities[i] }})</h1>
                                                <h1 class="font-medium text-black dark:text-white text-base">{{ product.price | format_currency('EUR') }}</h1>
                                                {% set i = i + 1 %}
                                            </div>
                                            <div class="h-full relative">
                                                <p class="text-base text-black dark:text-white">
                                                    {{ product.description }}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include 'footer.html.twig' %}
{% endblock %}
