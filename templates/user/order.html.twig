{% extends 'base.html.twig' %}

{% block title %}
Commande n°{{ order.id }} - TouSolidaires
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'user'} %}
    {# <div class="container-md py-3">
        <div class="order">
