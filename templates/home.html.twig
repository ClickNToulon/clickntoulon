    <section class="text-gray-400 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap -m-4">
                {% include 'shop/shop_skeleton.html.twig' with {'shops': shops} %}
            </div>
        </div>
    </section>
    <section class="text-gray-400 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
                {% include 'product/product_skeleton.html.twig' with {'products': products} %}
            </div>
            <div class="pt-5">
                <a href="{{ path('product_index') }}" class="w-full md:w-1/2 md:mx-auto flex items-center justify-center px-10 py-4 border border-transparent text-base font-medium rounded-2xl text-white bg-yellow-600 hover:bg-yellow-700 md:py-3 md:text-lg md:px-8">
