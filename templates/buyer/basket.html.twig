{% extends 'base.html.twig' %}

{% block title 'Mon panier - TouSolidaires' %}

{% block body %}
    {% include 'navbar.html.twig' with {'active': 'basket'} %}
    {% set i = 0 %}
    {% set total = 0 %}
    <div class="baskets">
        {% if baskets == null %}
            <div class="fr-container fr-container--fluid pt-4 pb-2">
                <h3>Vous n'avez aucun article dans votre panier</h3>
            </div>
        {% else %}
            {% for basket in baskets %}
                {% set total_products = b_products_id[basket.id] | length %}
                <div class="fr-container fr-container--fluid py-5 order_basket">
                    <main>
                        <div class="row g-5">
                            <div class="col-12 order-md-last order_info">
                                <h4 class="d-flex justify-content-between align-items-center mb-3 px-1">
                                    {% for shop in shops %}
                                        {% if basket.shopId == shop.id %}
                                            <span class="text-black">{{ shop.name }}</span>
                                        {% endif %}
                                    {% endfor %}
                                    <span class="fr-tag bg-yellow text-white">{{ total_products }}</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    {% set total = 0 %}
                                    {% set i = 0 %}
                                    {% for product in products %}
                                        {% if product.id in b_products_id[basket.id] %}
                                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                                <div class="product-description basket_product">
                                                    <h6 class="my-0">{{ product.name }}</h6>
                                                    <small class="text-muted">{{ product.description | length > 200 ? product.description|slice(0, 200) ~ '...' : product.description }}</small>
                                                </div>
                                                <div>
                                                    <span class="badge bg-yellow text-white">x{{ quantities[basket.id][i] }}</span>
                                                    <span class="text-black">{{ product.price |number_format(2,',',' ') }} €</span>
                                                </div>
                                            </li>
                                            {% set p = product.price * quantities[basket.id][i] %}
                                            {% set total = total + p %}
                                            {% set i = i + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span class="text-black">Total (Euro)</span>
                                        <strong>{{ total | number_format(2,',',' ') }} €</strong>
                                    </li>
                                    <li class="d-flex order_confirm">
                                        {% for shop in shops %}
                                            {% if basket.shopId == shop.id %}
                                                <a href="{{ path('basket_checkout', {id: shop.id}) }}"><button class="btn-form btn-no-mt">Passez la commande</button></a>
                                            {% endif %}
                                        {% endfor %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </main>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}